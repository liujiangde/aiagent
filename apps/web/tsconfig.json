{
  "extends": "@aiagent/tsconfig/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@aiagent/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@aiagent/retrieval": [
        "../../packages/retrieval/src/index.ts"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
