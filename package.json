{
  "name": "aiagent-monorepo",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=web --include-dependencies",
    "build": "turbo run build --filter=./apps/* --filter=./packages/*",
    "lint": "turbo run lint --filter=./apps/* --filter=./packages/*",
    "test": "turbo run test --filter=./apps/* --filter=./packages/*",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "turbo": "^1.13.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
