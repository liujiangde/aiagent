{
  "extends": "@aiagent/tsconfig/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
